<%- include('../../../layouts/header.ejs') %>
  <div class="card">
    <div class="card-header">
      <h5 class="card-title float-left">
        Create New User
      </h5>
      <div class="float-right">
        <a href="/server/master/users" class="btn btn-sm btn-default text-dark">
          Back
        </a>
      </div>
    </div>

    <div class="card-body">
      <form action="/server/master/users/store" method="post">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" name="name" id="name" placeholder="Full Name">
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" class="form-control" name="email" id="email" placeholder="Email@example.com">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" name="password" id="password" placeholder="Password (8 Character Minimal)">
        </div>
        
        <div class="float-right">
          <button type="submit" class="btn btn-sm btn-success">
            Create
          </button>
        </div>
      </form>
    </div>
  </div>
<%- include('../../../layouts/footer.ejs') %>
