<%- include('../../../layouts/header.ejs') %>
  <div class="card">
    <div class="card-header">
      <h5 class="card-title float-left">
        Update User
      </h5>
      <div class="float-right">
        <a href="/server/master/users" class="btn btn-sm btn-default text-dark">
          Back
        </a>
      </div>
    </div>

    <div class="card-body">
      <form action="/server/master/users/update/<%= user._id %>" method="post">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" name="name" id="name" value="<%= user.name %>" placeholder="Full Name">
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" class="form-control" name="email" id="email" value="<%= user.email %>" placeholder="Email@example.com">
        </div>
        <div class="float-right">
          <button type="submit" class="btn btn-sm btn-primary">
            Update
          </button>
        </div>
      </form>
    </div>
  </div>
<%- include('../../../layouts/footer.ejs') %>
