<%- include('../../../layouts/header.ejs') %>
  <div class="card">
    <div class="card-header">
      <h5 class="card-title float-left">
        Users List
      </h5>
      <div class="float-right">
        <a href="/server/master/users/create" class="btn btn-sm btn-success">
          <em class="fas fa-plus"></em>
            Create New User
        </a>
      </div>
    </div>

    <div class="card-body">
      <div class="table table-responsive">
        <table class="table table-striped table-bordered" id="datatable">
          <thead>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Email</th>
              <th>Action</th>
            </tr>
          </thead>

          <tbody>
            <% users.forEach((user, key) => { %>
              <tr>
                <td><%= key += 1 %></td>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td>
                  <a href="/server/master/users/<%= user._id %>" class="btn btn-sm btn-default text-dark">
                    <em class="fas fa-eye"></em>
                  </a>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<%- include('../../../layouts/footer.ejs') %>

<script>
  $(function() {
    $('#datatable').DataTable()
  })
</script>